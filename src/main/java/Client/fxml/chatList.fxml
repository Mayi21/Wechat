<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="540.0" maxWidth="960.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="540.0" prefWidth="960.0" stylesheets="@../Chat.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.ChatCon">
   <top>
      <HBox prefHeight="51.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="image" fitHeight="51.0" fitWidth="82.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../resources/头像.jpg" />
               </image>
            </ImageView>
            <Label fx:id="idLabel" prefHeight="50.0" prefWidth="69.0" textAlignment="JUSTIFY" />
            <Label fx:id="currentId" prefHeight="51.0" prefWidth="117.0" />
         </children></HBox>
   </top>
   <left>
      <VBox prefHeight="309.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="50.0" prefWidth="100.0">
               <children>
                  <Label prefHeight="23.0" prefWidth="40.0" text="在线" />
                  <Label fx:id="onlineLabel" prefHeight="27.0" prefWidth="50.0" />
                  <Label prefHeight="22.0" prefWidth="26.0" text="人" />
               </children>
            </HBox>
            <ListView fx:id="userList" onMouseEntered="#getToUser" prefHeight="493.0" prefWidth="100.0" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="300.0" prefWidth="436.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane prefHeight="434.0" prefWidth="860.0" vbarPolicy="NEVER">
               <content>
                  <ListView fx:id="chatList" prefHeight="415.0" prefWidth="850.0" />
               </content>
            </ScrollPane>
            <HBox prefHeight="97.0" prefWidth="500.0">
               <children>
                  <TextArea fx:id="messageBox" prefHeight="98.0" prefWidth="808.0" />
                  <Button fx:id="messageSendButton" mnemonicParsing="false" onMouseClicked="#send" prefHeight="82.0" prefWidth="66.0" text="发送" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
